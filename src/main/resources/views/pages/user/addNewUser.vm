#set($title = "Add New User")
<section class="page-heading" xmlns="http://www.w3.org/1999/html">
    <div class="container">
        <h1>新增子用户</h1>
    </div>
</section>

<section class="space-sm">
    <div class="container">

        <div class="tabled">
            <div class="tabled-heading">
                <h2>新增子用户</h2>
            </div>
            <div class="tabled-body">
                <div class="row">
                    <div class="col-md-4 col-border col-border-right">
                    </div>
                    <div class="col-md-4">
                        <form method="POST" action="#springUrl("/account/adduser")" class="inputs-default">
                            <div class="form-group">
                                <label >* 用户名</label>
                                <textarea rows="2" class="form-control"></textarea>
                            </div>
                            <hr class="break break10">
                            <div class="form-group">
                                <label >权限</label><br>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" name="role"  onclick= "" value="报价员"/><label class="control-label">&nbsp;&nbsp;报价员（权限：可以查看酒店报价）</label><br>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" name="role"  onclick= "" value="操作员"/><label class="control-label">&nbsp;&nbsp;操作员（权限：预定酒店，并管理自己预定的订单）</label><br>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" name="role"  onclick= "" value="账务"/><label class="control-label">&nbsp;&nbsp;账务（权限：查看所有订单，收取账单，查看账户情况）</label>
                            </div>
                            <hr class="break break10">
                            <div class="form-group">
                                <label >设置密码</label><br>
                                <label class="control-label">* 新密码</label> <input type="password" class="form-control" placeholder="">
                                <label class="control-label">* 确认密码</label><input type="password" class="form-control" placeholder="">
                            </div>

                            <hr class="break break10">
                            <div class="mark-required">* 必填项目</div>
                            <div align="center"><button type="submit" class="btn btn-purple-dark arrow-circle-right">提交</button>
                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                <button type="submit" class="btn btn-purple-dark arrow-circle-left">取消</button>
                            </div>
                        </form>
                    </div>

                  </div>
            </div>
        </div>

    </div>
</section>
