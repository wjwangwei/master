#set($title = "$order.hotelName")
<!-- Contents -->
<!--<div class="content">-->
    <section class="space-xs">
        <div class="container">

            <div class="stepper stepper-booking">
                <ul class="clearfix">
                    <li>1. Select your room</li>
                    <li>2. Enter booking and your details</li>
                    <li class="active">3. Confirm your reservation</li>
                </ul>
            </div>

            <div id="main-contents">
                <div id="main">
                    #if($showtoolbar.equals("true"))
                    <div class="row gutter10">
                        <div class="col-sm-4">
                            <a href="#" orderid="$order.orderId" class="btn btn-block btn-flat downloadvoucher"><i class="ico ico-booking-print"></i>VIEW AND DOWNLOAD VOUCHER</a>
                        </div>
                        <!--
                        <div class="col-sm-4">
                            <a href="#" orderid="$order.orderId" class="btn btn-block btn-flat emailvoucher"><i class="ico ico-booking-email"></i>SEND VOUCHER AS EMAIL</a>
                        </div>
                        -->
                        #if($refundable.equals("true"))
                        <div class="col-sm-4">
                            <a href="#" data-request='$cancellationrequest' class="btn btn-block btn-flat cancelbooking"><i class="ico ico-booking-cancel"></i>CANCEL BOOKING</a>
                        </div>
                        #end
                    </div>
                    #end
                    <hr class="break break20">
                    <div class="booking-detail booking-detail-overview">
                        <div class="booking-detail-titles">
                            <div class="booking-detail-title">$order.hotelName</div>
                            <div class="booking-detail-meta">
                                #set($rating = $order.hotel.starRating/10.0)
                                #set($starrating=$math.round($rating))
                                <div class="rate"><span class="rate$starrating"></span></div>
                                <span class="review-total">$order.hotel.reviews reviews</span>
                                <span>$order.hotel.address</span>
                                <!--<a href="#" class="booking-detail-showmap">Show on Map</a>-->
                            </div>
                        </div>
                        <div class="booking-detail-body">
                            <!--
                            <figure>
                                <img src="images/temp/temp_hotel001_150x95.jpg" alt="">
                            </figure>
                            -->
                            <hgroup>
                                #if($order.hotel.telephone)
                                    <label>Phone Number</label>
                                    <p>$order.hotel.telephone</p>
                                #end

                            </hgroup>
                        </div>
                    </div>
                    <div class="booking-detail">
                        <div class="booking-detail-heading">
                            <h3 class="has-icon icon-room">Your Room Information</h3>
                        </div>
                        <div class="booking-detail-body">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Room Name</th>
                                    <th>Guest Name</th>
                                </tr>
                                </thead>
                                <tbody>
                                #foreach($room in $roomlist.entrySet())
                                <tr>
                                    <td>${room.key}</td>
                                    <td>${room.value}</td>
                                </tr>
                                #end
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="booking-detail">
                        <div class="booking-detail-heading">
                            <h3 class="has-icon icon-checkmark-square">Policies</h3>
                        </div>
                        <div class="booking-detail-body">
                            <hgroup>
                                <ul class="checkmark-circle">
                                    #foreach($policy in $hotelpolicies.entrySet())
                                    <li>$policy.key : $policy.value</li>
                                    #end
                                </ul>
                            </hgroup>
                        </div>
                    </div>
                    <div class="booking-detail">
                        <div class="booking-detail-heading">
                            <h3 class="has-icon icon-checkmark-square">Important Notes</h3>
                        </div>
                        <div class="booking-detail-body">
                            <hgroup>
                                <ul class="checkmark-circle">
                                    <li>Extra person charges may apply and vary depending on holel policy.</li>
                                    <li>Government - issues photo identifications and a credit card or cash deposit are required at checkin for incidental charges.</li>
                                    <li>Special requests are subject to availabilty upon check-in and may incur additional charges.</li>
                                    <li>Specal request cannot be Guarandeed.</li>
                                </ul>
                            </hgroup>
                        </div>
                    </div>
                </div>

                <div id="side">
                    <div class="widget widget_booking_confirmed">
                        <div class="booking-ref">
                            <label>Booking Reference</label>
                            <div class="booking-ref-num"># $order.orderId</div>
                        </div>
                        <div class="booking-conf-dates">
                            <label>$orderstatus</label>
                            <ul>
                                <li>
                                    <div class="conf-dates-label">Check - in</div>
                                    <div class="conf-dates-date">$order.checkIn</div>
                                </li>
                                <li>
                                    <div class="conf-dates-label">Check - out</div>
                                    <div class="conf-dates-date">$order.checkOut</div>
                                </li>
                            </ul>
                        </div>
                        <!--
                        <div class="booking-conf-prices">
                            <ul>
                                <li>
                                    <div class="conf-price-label">Nightly price /room :</div>
                                    <div class="conf-price-amount">$124.47</div>
                                </li>
                                <li>
                                    <div class="conf-price-label">1 Room x 1 Night :</div>
                                    <div class="conf-price-amount">$124.47 <span class="ico ico-question-circle"><span></div>
                                </li>

                                <li>
                                    <div class="conf-price-label">Taxes and fees :</div>
                                    <div class="conf-price-amount">$23.70</div>
                                </li>
                            </ul>
                        </div>
                        -->
                        <div class="booking-conf-prices">
                            <ul>
                                <li>
                                    <div class="conf-price-label">Total charges :</div>
                                    <div class="conf-price-amount">$order.orderPrice.customerCurrency $totalamount</div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
<!--</div>-->
